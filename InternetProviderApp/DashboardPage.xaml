<Page x:Class="InternetProviderApp.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InternetProviderApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage" FontSize="16">

    <StackPanel VerticalAlignment="Center">
        <Button Name="BtnTariffs" Content="Тарифы" Margin="0 10 0 0" Click="BtnTariffs_Click" />
        <Button Name="BtnClients" Content="Клиенты" Margin="0 10 0 0" Click="BtnClients_Click" />
        <Button Name="BtnContracts" Content="Договоры" Margin="0 10 0 0" Click="BtnContracts_Click" />
        <Button Name="BtnAdditionalServices" Content="Услуги" Margin="0 10 0 0" Click="BtnAdditionalServices_Click" />
        <Button Name="BtnEquipments" Content="Оборудование" Margin="0 10 0 0" Click="BtnEquipments_Click" />
    </StackPanel>
</Page>
